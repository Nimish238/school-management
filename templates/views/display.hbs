    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <style type="text/css">
      .box{
      border:2px solid black;
      padding: 5px;
      /* width: 26%; */
      }
  h3{
  text-transform: uppercase;
   }
h1{
  text-decoration: underline;
}
.nav{
   width: 100%;
   height: 20px;
   margin-bottom: 40px;
   color: red;
   margin-left: 35%;
 }
 .lnk:hover{
      font-size: 17px;
      color: red;
    }
    .lnk:link{
          text-decoration:none;
      }
    </style>
</head>
<body>
  <nav >
    <div align="right" style="font-size: 20px; margin: 30px;">
    <a class="btn btn-danger" href="/">Log-Out</a>
  </div>
  </nav>
     <div align="center" class="ser"><h1>Students Profile</h1><br></div></div>
    <div class="nav">
    <span>Search student here:</span>
<input type="text" id="filter"><br>
</div>

      {{#each users}}
    <div class="box">
  <a href="/display/{{_id}}" class="lnk"> <h3>Name:  {{firstname}}   {{lastname}}</h3></a>
    <p>Age:{{age}}</p>


    <!-- <a href="/display/{{_id}}"> <button >Update </button></a>
    <a href="/delete/{{_id}}" class="delete"><button >Delete</button></a> -->
      <a href="/showattendance/{{_id}}"><button class="btn btn-success">show attendance</button></a>
    <a href="/result/{{_id}}" class="result"> <button class="btn btn-dark">Enter marks</button></a>
    <a href="/downloadTC/{{_id}}" class="result" > <button class="btn btn-danger">downloadTC</button></a>

    </div>
    <br>
       {{/each}}

</body>
<script type="text/javascript">
    $(document).ready(function(){
$("#filter").keyup(function() {
    var value = $(this).val().toLowerCase();
    $(".box").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>
</html>
